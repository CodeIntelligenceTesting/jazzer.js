{
	"name": "jazzerjs-jest-integration-example",
	"version": "1.0.0",
	"description": "An example showing how Jazzer.js integrates with Jest",
	"scripts": {
		"test": "JAZZER_FUZZ=1 jest",
		"dryRun": "jest"
	},
	"devDependencies": {
		"@jazzer.js/instrumentor": "file:../../packages/instrumentor",
		"@jazzer.js/jest": "file:../../packages/jest",
		"@jazzer.js/jest-runner": "file:../../packages/jest-runner",
		"eslint-plugin-jest": "^27.1.3",
		"@types/babel__core": "^7.1.19",
		"jest": "^29.3.1",
		"jest-each": "^29.3.1"
	},
	"jest": {
		"runner": "@jazzer.js/jest-runner",
		"displayName": "Jazzer.js",
		"testMatch": [
			"<rootDir>/**/*.fuzz.js"
		]
	},
	"jazzer-runner": {
		"dryRun": true,
		"includes": [
			"foo"
		],
		"excludes": [
			"nothing"
		],
		"fuzzerOptions": [
			"-runs=100"
		]
	}
}
