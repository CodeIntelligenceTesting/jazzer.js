{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"allowJs": true,
		"checkJs": true,
		"rootDir": ".",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"composite": true,
		"sourceMap": true
	}
}
